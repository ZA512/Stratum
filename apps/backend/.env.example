# PostgreSQL connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/stratum?schema=stratum"

# JWT secret placeholder
JWT_SECRET="change-me"
# JWT durées : accessToken 15min (renouvelé automatiquement), refreshToken 90 jours
JWT_ACCESS_TTL="15m"
JWT_REFRESH_TTL_MS=7776000000

# Activity Log - Nombre maximum de logs conservés par tâche (défaut: 20)
MAX_ACTIVITY_LOGS_PER_NODE=20
